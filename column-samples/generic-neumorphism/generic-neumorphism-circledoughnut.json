{
  "$schema": "https://developer.microsoft.com/json-schemas/sp/v2/column-formatting.schema.json",
  "elmType": "div",
  "style": {
    "position": "relative",
    "padding": "20px 5px "
  },
  "children": [
    {
      "elmType": "div",
      "style": {
        "display": "flex",
        "justify-content": "space-around",
        "align-items": "center",
        "width": "120px",
        "height": "120px",
        "border-radius": "10px",
        "box-shadow": "5px 5px 10px #bebebe,-5px -5px 10px #ffffff"
      },
      "attributes": {
        "class": "ms-bgColor-neutralLighter"
      },
      "children": [
        {
          "elmType": "div",
          "style": {
            "position": "relative",
            "cursor": "pointer",
            "margin": "auto",
            "height": "87px",
            "width": "87px",
            "border-radius": "50%"
          },
          "attributes": {
            "class": "ms-bgColor-neutralQuaternaryAlt"
          },
          "children": [
            {
              "elmType": "svg",
              "style": {
                "fill": "currentColor",
                "position": "absolute",
                "width": "90px",
                "height": "90px",
                "top": "-2px",
                "right": "-2px",
                "display": "=if(@currentField < 0 , 'none' , '')"
              },
              "attributes": {
                "viewBox": "0 0 1000 1000",
                "class": "ms-fontColor-themePrimary"
              },
              "children": [
                {
                  "elmType": "path",
                  "attributes": {
                    "d": "= 'M500,0 A500,500 0 ' + if(@currentField > 0.5 , '1,1 ' , '0,1 ') + (500 + 500 * sin(360 * if(@currentField > 1 , 1 , @currentField) * (3.14159 / 180))) + ',' + (500 - 500 * cos(360 * if(@currentField > 1 , 1 , @currentField) * (3.14159 / 180))) + ' L' + (500 + 450 * sin(360 * if(@currentField > 1 , 1 , @currentField) * (3.14159 / 180))) + ',' + (500 - 450 * cos(360 * if(@currentField > 1 , 1 , @currentField) * (3.14159 / 180))) + ' A450,450 0 ' + if(@currentField > 0.5 , '1,0 ' , '0,0 ') + ' 500,50 Z'"
                  }
                }
              ]
            }
          ]
        },
        {
          "elmType": "div",
          "style": {
            "position": "absolute",
            "width": "100%",
            "height": "100%",
            "display": "flex",
            "flex-direction": "column",
            "justify-content": "center",
            "align-items": "center"
          },
          "attributes": {
            "class": "ms-fontColor-themePrimary"
          },
          "children": [
            {
              "elmType": "div",
              "style": {
                "width": "70%",
                "text-align": "center",
                "font-size": "20px",
                "font-weight": "600"
              },
              "txtContent": "=1000* Number(@currentField)"
            },
            {
              "elmType": "div",
              "style": {
                "width": "70%",
                "text-align": "center",
                "font-size": "15px"
              },
              "txtContent": "Kcal"
            }
          ]
        }
      ]
    }
  ]
}