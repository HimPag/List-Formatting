{
	"$schema": "https://developer.microsoft.com/json-schemas/sp/v2/column-formatting.schema.json",
	"elmType": "div",
	"style": {
		"padding": "20px 5px "
	},
	"children": [
		{
			"elmType": "img",
			"attributes": {
				"src": "=getThumbnailImage(@currentField, 400, 300)",
				"alt": "@currentField.fileName"
			},
			"style": {
				"cursor": "pointer",
				"box-shadow": "-5px -5px 10px 0px #fff9, -5px -5px 5px 0px #fff9, 5px 5px 10px 0px #0002, 5px 5px 5px 0px #0001, inset 0px 0px 0px 0px #fff9, inset 0px 0px 0px 0px #0001, inset 0px 0px 0px 0px #fff9, inset 0px 0px 0px 0px #0001",
				"border-radius": "15px",
				"border": "1px solid #fff",
				"max-width": "200px",
				"max-height": "100px"
			},
			"customCardProps": {
				"openOnEvent": "click",
				"directionalHint": "rightCenter",
				"isBeakVisible": true,
				"formatter": {
					"elmType": "div",
					"style": {
						"max-width": "500px"
					},
					"children": [
						{
							"elmType": "div",
							"style": {
								"position": "absolute",
								"bottom": "0",
								"width": "100%"
							},
							"children": [
								{
									"elmType": "div",
									"style": {
										"font-size": "verdana",
										"padding-left": "10px",
										"white-space": "nowrap",
										"overflow": "hidden",
										"text-overflow": "ellipsis",
										"max-width": "490px"
									},
									"attributes": {
										"title": "@currentField.fileName",
										"class": "ms-fontColor-white ms-fontSize-20 ms-fontWeight-bold"
									},
									"txtContent": "@currentField.fileName"
								},
								{
									"elmType": "div",
									"style": {
										"padding": "10px",
										"background-color": "rgba(0, 0, 0, 0.6)",
										"opacity": "0.5",
										"max-width": "490px"
									},
									"attributes": {
										"title": "='File version: '+@currentField.thumbnailRenderer.fileVersion",
										"class": "ms-fontColor-white ms-fontSize-12"
									},
									"txtContent": "='File version: '+@currentField.thumbnailRenderer.fileVersion"
								}
							]
						},
						{
							"elmType": "img",
							"style": {
								"max-width": "500px",
								"max-height": "500px"
							},
							"attributes": {
								"src": "@currentField.serverRelativeUrl"
							}
						}
					]
				}
			}
		}
	]
}