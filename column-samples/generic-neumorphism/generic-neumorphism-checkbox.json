{
  "$schema": "https://developer.microsoft.com/json-schemas/sp/v2/column-formatting.schema.json",
  "elmType": "div",
  "style": {
    "padding": "20px 5px "
  },
  "children": [
    {
      "elmType": "div",
      "style": {
        "display": "flex",
        "justify-content": "space-around",
        "align-items": "center",
        "padding-left": "5px",
        "height": "50px",
        "width": "80px",
        "border-radius": "10px",
        "box-shadow": "5px 5px 10px #bebebe,-5px -5px 10px #ffffff"
      },
      "attributes": {
        "class": "=if(@currentField == true,'ms-bgColor-neutralLighter','sp-css-backgroundColor-themePrimary ')"
      },
      "children": [
        {
          "elmType": "div",
          "style": {
            "display": "=if(@currentField == false,'','none')",
            "font-size": "23px",
            "font-weight": "bold"
          },
          "attributes": {
            "iconName": "accept",
            "class": "ms-fontColor-white "
          }
        },
        {
          "elmType": "div",
          "style": {
            "text-decoration": "none",
            "color": "#2a3454",
            "cursor": "pointer",
            "display": "flex",
            "justify-content": "space-around",
            "align-items": "center",
            "height": "35px",
            "width": "35px",
            "border-radius": "10px",
            "box-shadow": "4px 4px 6px 0 rgba(255,255,255,.5),-4px -4px 6px 0 rgba(116, 125, 136, .2), inset -4px -4px 6px 0 rgba(255,255,255,.5), inset 4px 4px 6px 0 rgba(116, 125, 136, .3)"
          },
          "attributes": {
            "class": "ms-bgColor-neutralQuaternaryAlt"
          },
          "customRowAction": {
            "action": "setValue",
            "actionInput": {
              "CheckBox": "=if(@currentField == true,0,1)"
            }
          }
        },
        {
          "elmType": "div",
          "style": {
            "display": "=if(@currentField == true,'','none')",
            "font-size": "23px",
            "padding-right": "5px",
            "font-weight": "bold"
          },
          "attributes": {
            "iconName": "cancel",
            "class": "ms-fontColor-neutralSecondaryAlt"
          }
        }
      ]
    }
  ]
}